    <description value="Comments are free text data that cannot otherwise be recorded using data elements already defined by this specification. They are not to be used to record information that can be recorded elsewhere. For example, a free text description of the severity of an allergic reaction would not be recorded in a comment."/>
    <kind value="resource"/>
    <abstract value="false"/>
    <context/>
    <type value="Act"/>
    <baseDefinition value="http://hl7.org/fhir/cda/StructureDefinition/Act"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Act">
            <path value="Act"/>
        </element>
        <element id="Act.classCode">
            <path value="Act.classCode"/>
            <short value="classCode"/>
            <definition value="SHALL contain exactly one [1..1] @classCode=&quot;ACT&quot; Act (CodeSystem: HL7ActClass urn:oid:2.16.840.1.113883.5.6 STATIC) (CONF:81-9425)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.moodCode">
            <path value="Act.moodCode"/>
            <short value="moodCode"/>
            <definition value="SHALL contain exactly one [1..1] @moodCode=&quot;EVN&quot; Event (CodeSystem: HL7ActMood urn:oid:2.16.840.1.113883.5.1001 STATIC) (CONF:81-9426)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.templateId">
            <path value="Act.templateId"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="root"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <definition value="SHALL contain exactly one [1..1] templateId (CONF:81-9427) such that it"/>
        </element>
        <element id="Act.templateId:templateId1">
            <path value="Act.templateId"/>
            <sliceName value="templateId1"/>
            <short value="templateId"/>
            <definition value="SHALL contain exactly one [1..1] templateId (CONF:81-9427) such that it"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.templateId:templateId1.root">
            <path value="Act.templateId.root"/>
            <sliceName value="templateId1"/>
            <short value="root"/>
            <definition value="SHALL contain exactly one [1..1] @root=&quot;2.16.840.1.113883.10.20.22.4.64&quot; (CONF:81-10491)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.code">
            <path value="Act.code"/>
            <short value="code"/>
            <definition value="SHALL contain exactly one [1..1] code (CONF:81-9428)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.code.code">
            <path value="Act.code.code"/>
            <short value="code"/>
            <definition value="This code SHALL contain exactly one [1..1] @code=&quot;48767-8&quot; Annotation Comment (CONF:81-19159)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.code.codeSystem">
            <path value="Act.code.codeSystem"/>
            <short value="codeSystem"/>
            <definition value="This code SHALL contain exactly one [1..1] @codeSystem=&quot;2.16.840.1.113883.6.1&quot; (CodeSystem: LOINC urn:oid:2.16.840.1.113883.6.1) (CONF:81-26501)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.text">
            <path value="Act.text"/>
            <short value="text"/>
            <definition value="SHALL contain exactly one [1..1] text (CONF:81-9430)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.text.reference">
            <path value="Act.text.reference"/>
            <short value="reference"/>
            <definition value="This text SHALL contain exactly one [1..1] reference (CONF:81-15967)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.text.reference.value">
            <path value="Act.text.reference.value"/>
            <short value="value"/>
            <definition value="This reference SHALL contain exactly one [1..1] @value (CONF:81-15968)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.text.reference/value">
            <path value="Act.text.reference/value"/>
            <short value="reference/value"/>
            <definition value="This text SHALL contain exactly one [1..1] reference/@value (CONF:81-9431)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.author">
            <path value="Act.author"/>
            <short value="author"/>
            <definition value="SHOULD contain zero or one [0..1] authorAuthor Participation (identifier: urn:oid:2.16.840.1.113883.10.20.22.4.119) (CONF:81-9433)."/>
            <min value="0"/>
            <max value="1"/>
        </element>
    </differential>
</StructureDefinition>