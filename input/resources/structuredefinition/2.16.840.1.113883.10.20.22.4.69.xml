        <value value="urn:oid:2.16.840.1.113883.10.20.22.4.69"/>
    </identifier>
    <name value="AssessmentScaleObservation"/>
    <title value="Assessment Scale Observation"/>
    <status value="active"/>
    <contact>
        <name value="Gaye Dolin"/>
        <telecom>
            <system value="phone"/>
