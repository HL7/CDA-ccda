    <description value="The template is available to explicitly identify the free text Sig within each medication. &#xA;&#xA;An example free text sig: Thyroxin 150 ug, take one tab by mouth every morning."/>
    <kind value="resource"/>
    <abstract value="false"/>
    <type value="SubstanceAdministration"/>
    <baseDefinition value="http://hl7.org/fhir/cda/StructureDefinition/SubstanceAdministration"/>
    <derivation value="constraint"/>
    <differential>
        <element id="SubstanceAdministration">
            <path value="SubstanceAdministration"/>
        </element>
        <element id="SubstanceAdministration.classCode">
            <path value="SubstanceAdministration.classCode"/>
            <short value="classCode"/>
            <definition value="SHALL contain exactly one [1..1] @classCode=&quot;SBADM&quot; (CodeSystem: HL7ActClass urn:oid:2.16.840.1.113883.5.6 STATIC) (CONF:81-32770)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="SBADM"/>
        </element>
        <element id="SubstanceAdministration.moodCode">
            <path value="SubstanceAdministration.moodCode"/>
            <label value="moodCode must match the parent substanceAdministration EVN or INT "/>
            <short value="moodCode must match the parent substanceAdministration EVN or INT "/>
            <definition value="SHALL contain exactly one [1..1] @moodCode, which SHALL be selected from ValueSet MoodCodeEvnInt urn:oid:2.16.840.1.113883.11.20.9.18 STATIC 2011-04-03 (CONF:81-32771)."/>
            <min value="1"/>
            <max value="1"/>
            <binding>
                <strength value="required"/>
                <valueSet value="https://cts.nlm.nih.gov/fhir/ValueSet/2.16.840.1.113883.11.20.9.18"/>
            </binding>
        </element>
        <element id="SubstanceAdministration.templateId">
            <path value="SubstanceAdministration.templateId"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="root"/>
                </discriminator>
                <rules value="closed"/>
            </slicing>
            <definition value="SHALL contain exactly one [1..1] templateId (CONF:81-32753) such that it"/>
        </element>
        <element id="SubstanceAdministration.templateId:templateId1">
            <path value="SubstanceAdministration.templateId"/>
            <sliceName value="templateId1"/>
            <short value="templateId"/>
            <definition value="SHALL contain exactly one [1..1] templateId (CONF:81-32753) such that it"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.templateId:templateId1.root">
            <path value="SubstanceAdministration.templateId.root"/>
            <short value="root"/>
            <definition value="SHALL contain exactly one [1..1] @root=&quot;2.16.840.1.113883.10.20.22.4.147&quot; (CONF:81-32772)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2.16.840.1.113883.10.20.22.4.147"/>
        </element>
        <element id="SubstanceAdministration.code">
            <path value="SubstanceAdministration.code"/>
            <short value="code"/>
            <definition value="SHALL contain exactly one [1..1] code (CodeSystem: LOINC urn:oid:2.16.840.1.113883.6.1) (CONF:81-32775)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.code.code">
            <path value="SubstanceAdministration.code.code"/>
            <short value="code"/>
            <definition value="This code SHALL contain exactly one [1..1] @code=&quot;76662-6&quot; Instructions Medication (CONF:81-32780)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="76662-6"/>
        </element>
        <element id="SubstanceAdministration.code.codeSystem">
            <path value="SubstanceAdministration.code.codeSystem"/>
            <short value="codeSystem"/>
            <definition value="This code SHALL contain exactly one [1..1] @codeSystem=&quot;2.16.840.1.113883.6.1&quot; (CodeSystem: LOINC urn:oid:2.16.840.1.113883.6.1 STATIC) (CONF:81-32781)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2.16.840.1.113883.6.1"/>
        </element>
        <element id="SubstanceAdministration.text">
            <path value="SubstanceAdministration.text"/>
            <short value="text"/>
            <definition value="SHALL contain exactly one [1..1] text (CONF:81-32754)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.text.reference">
            <path value="SubstanceAdministration.text.reference"/>
            <short value="reference"/>
            <definition value="This text SHALL contain exactly one [1..1] reference (CONF:81-32755)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.text.reference.value">
            <path value="SubstanceAdministration.text.reference.value"/>
            <short value="value"/>
            <definition value="This reference SHOULD contain zero or one [0..1] @value (CONF:81-32756)."/>
            <min value="0"/>
            <max value="1"/>
            <constraint>
                <key value="81-32774"/>
                <severity value="error"/>
                <human value="This reference/@value SHALL begin with a '#' and SHALL point to its corresponding narrative (using the approach defined in CDA Release 2, section 4.3.5.1) (CONF:81-32774)."/>
            </constraint>
        </element>
        <element id="SubstanceAdministration.consumable">
            <path value="SubstanceAdministration.consumable"/>
            <short value="consumable"/>
            <definition value="SHALL contain exactly one [1..1] consumable (CONF:81-32776)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.consumable.manufacturedProduct">
            <path value="SubstanceAdministration.consumable.manufacturedProduct"/>
            <short value="manufacturedProduct"/>
            <definition value="This consumable SHALL contain exactly one [1..1] manufacturedProduct (CONF:81-32777)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.consumable.manufacturedProduct.manufacturedLabeledDrug">
            <path value="SubstanceAdministration.consumable.manufacturedProduct.manufacturedLabeledDrug"/>
            <short value="manufacturedLabeledDrug"/>
            <definition value="This manufacturedProduct SHALL contain exactly one [1..1] manufacturedLabeledDrug (CONF:81-32778)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="SubstanceAdministration.consumable.manufacturedProduct.manufacturedLabeledDrug.nullFlavor">
            <path value="SubstanceAdministration.consumable.manufacturedProduct.manufacturedLabeledDrug.nullFlavor"/>
            <short value="nullFlavor"/>
            <definition value="This manufacturedLabeledDrug SHALL contain exactly one [1..1] @nullFlavor=&quot;NA&quot; Not Applicable (CONF:81-32779)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="NA"/>
        </element>
    </differential>
</StructureDefinition>