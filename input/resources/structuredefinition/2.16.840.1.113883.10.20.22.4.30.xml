            <min value="1"/>
        </element>
        <element id="Act.entryRelationship:allergyObs">
            <path value="Act.entryRelationship"/>
            <sliceName value="allergyObs"/>
            <requirements value="SHALL contain at least one [1..*] entryRelationship (CONF:1198-7509) such that it"/>
