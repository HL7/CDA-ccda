            <min value="1"/>
            <max value="1"/>
            <patternString value="2015-08-01"/>
        </element>
        <element id="Act.id">
            <path value="Act.id"/>
            <requirements value="SHALL contain at least one [1..*] id (CONF:1198-7472)."/>
            <min value="1"/>
            <max value="*"/>
