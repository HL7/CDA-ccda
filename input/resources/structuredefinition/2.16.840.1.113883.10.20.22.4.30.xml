                <key value="1198-10085"/>
                <severity value="error"/>
                <human value="If statusCode/@code=&quot;completed&quot; Completed, then effectiveTime **SHALL** contain [1..1] high (CONF:1198-10085)."/>
            </constraint>
            <constraint>
