<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="SelfCareActivitiesADLandIADL"/>
    <extension url="http://hl7.org/fhir/tools/StructureDefinition/logical-target">
      <valueBoolean>
        <extension url="http://hl7.org/fhir/StructureDefinition/data-absent-reason">
          <valueCode value="not-applicable"/>
        </extension>
      </valueBoolean>
    </extension>
    <url value="http://hl7.org/cda/us/ccda/StructureDefinition/SelfCareActivitiesADLandIADL"/>
    <identifier>
        <value value="urn:oid:2.16.840.1.113883.10.20.22.4.128"/>
    </identifier>
    <name value="SelfCareActivitiesADLandIADL"/>
    <title value="Self-Care Activities (ADL and IADL)"/>
    <status value="active"/>
    <description value="This template represents a patient's daily self-care ability. These activities are called Activities of Daily Living (ADL) and Instrumental Activities of Daily Living (IADL). ADLs involve caring for and moving of the body (e.g., dressing, bathing, eating). IADLs support an independent life style (e.g., cooking, managing medications, driving, shopping)."/>
    <fhirVersion value="4.0.1"/>
    <kind value="logical"/>
    <abstract value="false"/>
    <type value="http://hl7.org/cda/stds/core/StructureDefinition/Observation"/>
    <baseDefinition value="http://hl7.org/cda/stds/core/StructureDefinition/Observation"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Observation">
            <path value="Observation"/>
        </element>
        <element id="Observation.classCode">
            <path value="Observation.classCode"/>
            <comment value="SHALL contain exactly one [1..1] @classCode=&quot;OBS&quot; (CodeSystem: HL7ActClass urn:oid:2.16.840.1.113883.5.6) (CONF:1098-31389)."/>
            <min value="1"/>
            <max value="1"/>
            <fixedCode value="OBS"/>
        </element>
        <element id="Observation.moodCode">
            <path value="Observation.moodCode"/>
            <comment value="SHALL contain exactly one [1..1] @moodCode=&quot;EVN&quot; (CodeSystem: HL7ActMood urn:oid:2.16.840.1.113883.5.1001) (CONF:1098-31390)."/>
            <min value="1"/>
            <max value="1"/>
            <fixedCode value="EVN"/>
        </element>
        <element id="Observation.templateId">
            <path value="Observation.templateId"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="root"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <min value="1"/>
        </element>
        <element id="Observation.templateId:primary">
            <path value="Observation.templateId"/>
            <sliceName value="primary"/>
            <comment value="SHALL contain exactly one [1..1] templateId (CONF:1098-28190) such that it, SHALL not contain [0..0] extension."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Observation.templateId:primary.root">
            <path value="Observation.templateId.root"/>
            <comment value="SHALL contain exactly one [1..1] @root=&quot;2.16.840.1.113883.10.20.22.4.128&quot; (CONF:1098-28457)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2.16.840.1.113883.10.20.22.4.128"/>
        </element>
        <element id="Observation.templateId:primary.extension">
            <path value="Observation.templateId.extension"/>
            <min value="0"/>
            <max value="0"/>
        </element>
        <element id="Observation.code">
            <path value="Observation.code"/>
            <short value="If more detailed ADL and IADL activities need to be recorded select the appropriate code from LOINC."/>
            <comment value="SHALL contain exactly one [1..1] code, which SHOULD be selected from ValueSet ADL Result Type urn:oid:2.16.840.1.113883.11.20.9.47 DYNAMIC (CONF:1098-28153)."/>
            <min value="1"/>
            <max value="1"/>
            <binding>
                <strength value="preferred"/>
                <valueSet value="http://cts.nlm.nih.gov/fhir/ValueSet/2.16.840.1.113883.11.20.9.47"/>
            </binding>
        </element>
        <element id="Observation.statusCode">
            <path value="Observation.statusCode"/>
            <comment value="SHALL contain exactly one [1..1] statusCode (CodeSystem: HL7ActStatus urn:oid:2.16.840.1.113883.5.14) (CONF:1098-32490)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Observation.statusCode.code">
            <path value="Observation.statusCode.code"/>
            <comment value="This statusCode SHALL contain exactly one [1..1] @code=&quot;completed&quot; (CodeSystem: HL7ActStatus urn:oid:2.16.840.1.113883.5.14) (CONF:1098-32491)."/>
            <min value="1"/>
            <max value="1"/>
            <fixedCode value="completed"/>
        </element>
        <element id="Observation.effectiveTime">
            <path value="Observation.effectiveTime"/>
            <comment value="SHALL contain exactly one [1..1] effectiveTime (CONF:1098-32492)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <!--SG 20230709: Remove bad slicing due to erroneous TWB entry-->
        <!--<element id="Observation.value"><path value="Observation.value"/><slicing><rules value="open"/></slicing><min value="1"/></element>-->
        <element id="Observation.value">
            <path value="Observation.value"/>
            <!--<sliceName value="ability"/>-->
            <comment value="SHALL contain exactly one [1..1] value with @xsi:type=&quot;CD&quot;, where the code SHOULD be selected from ValueSet Ability urn:oid:2.16.840.1.113883.11.20.9.46 DYNAMIC (CONF:1098-28042)."/>
            <min value="1"/>
            <max value="1"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/CD"/>
            </type>
            <binding>
                <strength value="preferred"/>
                <valueSet value="http://cts.nlm.nih.gov/fhir/ValueSet/2.16.840.1.113883.11.20.9.46"/>
            </binding>
        </element>
        <element id="Observation.author">
            <path value="Observation.author"/>
            <comment value="SHOULD contain zero or more [0..*] Author Participation (identifier: urn:oid:2.16.840.1.113883.10.20.22.4.119) (CONF:1098-32469)."/>
            <min value="0"/>
            <max value="*"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/Author"/>
                <profile value="http://hl7.org/cda/us/ccda/StructureDefinition/AuthorParticipation"/>
            </type>
        </element>
    </differential>
</StructureDefinition>