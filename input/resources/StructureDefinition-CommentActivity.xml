<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="CommentActivity"/>
    <extension url="http://hl7.org/fhir/tools/StructureDefinition/logical-target">
        <valueBoolean>
            <extension url="http://hl7.org/fhir/StructureDefinition/data-absent-reason">
                <valueCode value="not-applicable"/>
            </extension>
        </valueBoolean>
    </extension>
    <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-namespace">
        <valueUri value="urn:hl7-org:v3"/>
    </extension>
    <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-xml-name">
        <valueUri value="act"/>
    </extension>
    <extension url="http://hl7.org/fhir/tools/StructureDefinition/type-profile-style">
        <valueUri value="cda"/>
    </extension>
    <url value="http://hl7.org/cda/us/ccda/StructureDefinition/CommentActivity"/>
    <identifier>
        <value value="urn:oid:2.16.840.1.113883.10.20.22.4.64"/>
    </identifier>
    <name value="CommentActivity"/>
    <title value="Comment Activity"/>
    <status value="draft"/>
    <description value="Comments are free text data that cannot otherwise be recorded using data elements already defined by this specification. They are not to be used to record information that can be recorded elsewhere. For example, a free text description of the severity of an allergic reaction would not be recorded in a comment."/>
    <fhirVersion value="5.0.0"/>
    <mapping>
        <identity value="rim"/>
        <uri value="http://hl7.org/v3"/>
        <name value="RIM Mapping"/>
    </mapping>
    <kind value="logical"/>
    <abstract value="false"/>
    <type value="http://hl7.org/cda/stds/core/StructureDefinition/Act"/>
    <baseDefinition value="http://hl7.org/cda/stds/core/StructureDefinition/Act"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Act">
            <path value="Act"/>
            <constraint>
                <key value="should-text-ref-value"/>
                <severity value="warning"/>
                <human value="SHOULD contain text/reference/@value"/>
                <expression value="text.reference.value.exists()"/>
                <source value="http://hl7.org/cda/us/ccda/StructureDefinition/CommentActivity"/>
            </constraint>
            <constraint>
                <key value="should-author"/>
                <severity value="warning"/>
                <human value="SHOULD contain author"/>
                <expression value="author.exists()"/>
                <source value="http://hl7.org/cda/us/ccda/StructureDefinition/CommentActivity"/>
            </constraint>
        </element>
        <element id="Act.templateId">
            <path value="Act.templateId"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="root"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <min value="1"/>
        </element>
        <element id="Act.templateId:comment-activity">
            <path value="Act.templateId"/>
            <sliceName value="comment-activity"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Act.templateId:comment-activity.root">
            <path value="Act.templateId.root"/>
            <min value="1"/>
            <patternString value="2.16.840.1.113883.10.20.22.4.64"/>
        </element>
        <element id="Act.templateId:comment-activity.extension">
            <path value="Act.templateId.extension"/>
            <max value="0"/>
        </element>
        <element id="Act.classCode">
            <path value="Act.classCode"/>
            <comment value="SHALL contain exactly one [1..1] @classCode=&quot;ACT&quot; Act (CodeSystem: HL7ActClass urn:oid:2.16.840.1.113883.5.6 STATIC) (CONF:81-9425)."/>
            <fixedCode value="ACT"/>
        </element>
        <element id="Act.moodCode">
            <path value="Act.moodCode"/>
            <comment value="SHALL contain exactly one [1..1] @moodCode=&quot;EVN&quot; Event (CodeSystem: HL7ActMood urn:oid:2.16.840.1.113883.5.1001 STATIC) (CONF:81-9426)."/>
            <fixedCode value="EVN"/>
        </element>
        <element id="Act.code">
            <path value="Act.code"/>
            <comment value="SHALL contain exactly one [1..1] code (CONF:81-9428)."/>
        </element>
        <element id="Act.code.code">
            <path value="Act.code.code"/>
            <comment value="This code SHALL contain exactly one [1..1] @code=&quot;48767-8&quot; Annotation Comment (CONF:81-19159)."/>
            <min value="1"/>
            <patternCode value="48767-8"/>
        </element>
        <element id="Act.code.codeSystem">
            <path value="Act.code.codeSystem"/>
            <comment value="This code SHALL contain exactly one [1..1] @codeSystem=&quot;2.16.840.1.113883.6.1&quot; (CodeSystem: LOINC urn:oid:2.16.840.1.113883.6.1) (CONF:81-26501)."/>
            <min value="1"/>
            <patternString value="2.16.840.1.113883.6.1"/>
        </element>
        <element id="Act.text">
            <path value="Act.text"/>
            <short value="SHOULD reference the portion of section narrative text corresponding to this entry"/>
            <comment value="SHALL contain exactly one [1..1] text (CONF:81-9430)."/>
            <min value="1"/>
        </element>
        <element id="Act.text.reference">
            <path value="Act.text.reference"/>
            <comment value="This text SHALL contain exactly one [1..1] reference (CONF:81-15967)."/>
            <min value="1"/>
            <constraint>
                <key value="value-starts-octothorpe"/>
                <severity value="error"/>
                <human value="If reference/@value is present, it SHALL begin with a '#' and SHALL point to its corresponding narrative"/>
                <expression value="value.exists() implies value.startsWith('#')"/>
                <source value="http://hl7.org/cda/us/ccda/StructureDefinition/CommentActivity"/>
            </constraint>
        </element>
        <element id="Act.text.reference.value">
            <path value="Act.text.reference.value"/>
            <comment value="This reference SHALL contain exactly one [1..1] @value (CONF:81-15968)."/>
            <min value="1"/>
        </element>
        <element id="Act.author">
            <path value="Act.author"/>
            <comment value="SHOULD contain zero or one [0..1] Author Participation (identifier: urn:oid:2.16.840.1.113883.10.20.22.4.119) (CONF:81-9433)."/>
            <max value="1"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/Author"/>
                <profile value="http://hl7.org/cda/us/ccda/StructureDefinition/AuthorParticipation"/>
            </type>
        </element>
    </differential>
</StructureDefinition>