                <valueBoolean value="true"/>
            </extension>
            <path value="Observation.value"/>
            <short value="(USCDI) Value"/>
            <comment value="MAY contain zero or more [0..*] value."/>
            <max value="1"/>
        </element>
        <element id="Observation.author">
