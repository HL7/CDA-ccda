            <min value="1"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/Organizer"/>
                <profile value="http://hl7.org/cda/us/ccda/StructureDefinition/AdvanceDirectiveOrganizer"/>
            </type>
        </element>
    </differential>
</StructureDefinition>