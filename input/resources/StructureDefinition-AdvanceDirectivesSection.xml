<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="AdvanceDirectivesSection"/>
    <extension url="http://hl7.org/fhir/tools/StructureDefinition/logical-target">
      <valueBoolean>
        <extension url="http://hl7.org/fhir/StructureDefinition/data-absent-reason">
          <valueCode value="not-applicable"/>
        </extension>
      </valueBoolean>
    </extension>
    <url value="http://hl7.org/cda/us/ccda/StructureDefinition/AdvanceDirectivesSection"/>
    <identifier>
        <value value="urn:hl7ii:2.16.840.1.113883.10.20.22.2.21.1:2015-08-01"/>
    </identifier>
    <version value="2015-08-01"/>
    <name value="AdvanceDirectivesSection"/>
    <title value="Advance Directives Section"/>
    <status value="active"/>
    <description value="This section contains data defining the patient's advance directives and any reference to supporting documentation, including living wills, healthcare proxies, and CPR and resuscitation status. If the referenced documents are available, they can be included in the exchange package. &#xA;&#xA;The most recent directives are required, if known, and should be listed in as much detail as possible. &#xA;&#xA;This section differentiates between &quot;advance directives&quot; and &quot;advance directive documents&quot;. The former is the directions to be followed whereas the latter refers to a legal document containing those directions.&#xA;"/>
    <fhirVersion value="4.0.1"/>
    <kind value="logical"/>
    <abstract value="false"/>
    <type value="http://hl7.org/cda/stds/core/StructureDefinition/Section"/>
    <baseDefinition value="http://hl7.org/cda/stds/core/StructureDefinition/Section"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Section">
            <path value="Section"/>
        </element>
        <element id="Section.nullFlavor">
            <path value="Section.nullFlavor"/>
            <comment value="MAY contain zero or one [0..1] @nullFlavor=&quot;NI&quot; No information (CodeSystem: HL7NullFlavor urn:oid:2.16.840.1.113883.5.1008) (CONF:1198-32800)."/>
            <min value="0"/>
            <max value="1"/>
            <fixedCode value="NI"/>
        </element>
        <element id="Section.templateId">
            <path value="Section.templateId"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="root"/>
                </discriminator>
                <discriminator>
                    <type value="value"/>
                    <path value="extension"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <min value="2"/>
        </element>
        <element id="Section.templateId:secondary">
            <path value="Section.templateId"/>
            <sliceName value="secondary"/>
            <comment value="SHALL contain exactly one [1..1] templateId (CONF:1198-30227) such that it"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Section.templateId:secondary.root">
            <path value="Section.templateId.root"/>
            <comment value="SHALL contain exactly one [1..1] @root=&quot;2.16.840.1.113883.10.20.22.2.21.1&quot; (CONF:1198-30228)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2.16.840.1.113883.10.20.22.2.21.1"/>
        </element>
        <element id="Section.templateId:secondary.extension">
            <path value="Section.templateId.extension"/>
            <comment value="SHALL contain exactly one [1..1] @extension=&quot;2015-08-01&quot; (CONF:1198-32512)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2015-08-01"/>
        </element>
        <element id="Section.code">
            <path value="Section.code"/>
            <comment value="SHALL contain exactly one [1..1] code (CONF:1198-32929)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Section.code.code">
            <path value="Section.code.code"/>
            <comment value="This code SHALL contain exactly one [1..1] @code=&quot;42348-3&quot; Advance Directives (CONF:1198-32930)."/>
            <min value="1"/>
            <max value="1"/>
            <patternCode value="42348-3"/>
        </element>
        <element id="Section.code.codeSystem">
            <path value="Section.code.codeSystem"/>
            <comment value="This code SHALL contain exactly one [1..1] @codeSystem=&quot;2.16.840.1.113883.6.1&quot; (CodeSystem: LOINC urn:oid:2.16.840.1.113883.6.1) (CONF:1198-32931)."/>
            <min value="1"/>
            <max value="1"/>
            <patternString value="2.16.840.1.113883.6.1"/>
        </element>
        <element id="Section.title">
            <path value="Section.title"/>
            <comment value="SHALL contain exactly one [1..1] title (CONF:1198-32932)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Section.text">
            <path value="Section.text"/>
            <comment value="SHALL contain exactly one [1..1] text (CONF:1198-32933)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Section.entry">
            <path value="Section.entry"/>
            <slicing>
                <discriminator>
                    <type value="exists"/>
                    <path value="*"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <short value="If section/@nullFlavor is not present SHALL contain an Advance Directive Observation OR an Advance Directive Organizer (NEW):"/>
            <comment value="SHALL contain at least one [1..*] entry (CONF:1198-30235) such that it"/>
            <min value="1"/>
            <max value="*"/>
            <constraint>
                <key value="1198-32881"/>
                <severity value="error"/>
                <human value="This entry **SHALL** contain *EITHER* an Advance Directive Observation *OR* an Advance Directive Organizer (CONF:1198-32881)."/>
            </constraint>
        </element>
        <element id="Section.entry:observation">
            <path value="Section.entry"/>
            <sliceName value="observation"/>
            <comment value="MAY contain zero or more [0..*] entry (CONF:1198-7957) such that it"/>
        </element>
        <element id="Section.entry:observation.observation">
            <path value="Section.entry.observation"/>
            <comment value="SHALL contain exactly one [1..1] Advance Directive Observation (identifier: urn:hl7ii:2.16.840.1.113883.10.20.22.4.48:2015-08-01) (CONF:1198-15443)."/>
            <min value="1"/>
            <max value="1"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/Observation"/>
                <profile value="http://hl7.org/cda/us/ccda/StructureDefinition/AdvanceDirectiveObservation"/>
            </type>
        </element>
        <element id="Section.entry:organizer">
            <path value="Section.entry"/>
            <sliceName value="organizer"/>
            <comment value="MAY contain zero or more [0..*] entry (CONF:1198-32891) such that it"/>
        </element>
        <element id="Section.entry:organizer.organizer">
            <path value="Section.entry.organizer"/>
            <comment value="SHALL contain exactly one [1..1] Advance Directive Organizer (identifier: urn:hl7ii:2.16.840.1.113883.10.20.22.4.108:2015-08-01) (CONF:1198-32892)."/>
            <min value="1"/>
            <max value="1"/>
            <type>
                <code value="http://hl7.org/cda/stds/core/StructureDefinition/Organizer"/>
                <profile value="http://hl7.org/cda/us/ccda/StructureDefinition/AdvanceDirectiveOrganizer"/>
            </type>
        </element>
    </differential>
</StructureDefinition>